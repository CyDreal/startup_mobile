<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCrewPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_round_image"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCrewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Crew"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvCrewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0812xxxxxxx"
                android:textSize="13sp"
                android:textColor="@color/grey_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvCrewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="13sp"
                android:textColor="@color/success"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textSize="13sp"
                android:textColor="@color/grey_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penugasan Baru"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="13sp"
                android:textColor="@color/success"
                android:layout_marginTop="2dp"/>


            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="13sp"
                android:textColor="@color/grey_700"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
